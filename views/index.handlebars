<div class="container">
    <div class="row" id="top">
        <div class="col-md-12">
            <img class="burger" src="../public/assets/img/BurgBan.jpg" />
            <h1 class="burgerSpot">Eat-Da-Burger!</h1>
        </div>
    </div>

    <div class="row" id="mid">
        <div class="col-md-8">
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{burger_name}}
                {{> burgers/burger-block}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-md-4">
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <li>
                    {{id}}
                    {{burger_name}}
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="row" id="bottom">
        <div class="col-md-12">
            <div class="orderBurger">
                <form class="create-form">
                    <div class="form-group">
                        <input type="text" id="newBurger" name="burger">
                    </div>
                    <button type="submit" id="subBtn">Sumbit</button>
                    <p>Enter a burger you want to eat Click the "Submit" button.</p>
                </form>
            </div>
        </div>
    </div>
</div>